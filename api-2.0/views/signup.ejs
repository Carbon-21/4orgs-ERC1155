    <!-- Register Section -->

    <section id="register">
      <div class="container-fluid">
        <div class="register-form card shadow">
          <form action="/signup" method="POST" class="validated-form" id="form" novalidate>
            <div class="row">
              <div class="data-col col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
                <h1 class="sign-up-header">Registrar</h1>

                <div class="register-data">
                  <i class="fas fa-user fa-lg"></i>
                  <div class="flex-fill">
                    <input type="text" name="name" id="name" class="form-control" required />
                    <label class="form-label" for="name">Nome completo</label>
                  </div>
                </div>

                <div class="register-data">
                  <i class="fa-solid fa-id-card"></i>
                  <div class="flex-fill">
                    <input type="text" name="cpf" id="cpf" class="form-control" required />
                    <label class="form-label" for="cpf">CPF</label>
                  </div>
                </div>

                <div class="register-data">
                  <i class="fas fa-lock fa-lg"></i>
                  <div class="flex-fill">
                    <input
                      type="password"
                      name="password"
                      id="password"
                      class="form-control"
                      required
                      oninput="console.time('doSomething');argon2.hash({ pass: password.value, salt: salt.value.slice(0, -1), hashLen: 16, type:argon2.ArgonType.Argon2id, time: 3, mem:6024, parallelism: 3 }).then(console.timeEnd('doSomething')).then(h =>
                      hashedPassword.value=h.hashHex).catch(e => console.error(e.message, e.code));"
                    />
                    <label class="form-label" for="password">Senha</label>
                  </div>
                </div>

                <output name="x" ></output>

                <div class="form-check">
                  <input
                    type="checkbox"
                    name="tos"
                    value=""
                    id="tos"
                    class="form-check-input"
                    required
                  />
                  <label class="form-check-label"
                    >Concordo com os <a href="#!">termos de servi√ßo</a></label
                  >
                </div>

                <!--get email, pass it to the server again -->
                <input type="text" name="email" id="email" hidden value=<%= email %>/>

                <!--get salt, use it on client's PHS -->
                <input type="text" name="salt" id="salt" hidden value=<%= salt %>/>

                <!--each time the user type in the password field, update this with the hash of the input -->
                <input type="text" name="hashedPassword" id="hashedPassword" />


                <div class="register-button">
                  <button type="submit" id="submitBtn" class="btn btn-primary btn-lg" value="run external javascript">Registrar</button>
                </div>

              </div>

              <div class="col-md-10 col-lg-6 col-xl-7 order-1 order-lg-2 carbon-logo-container">
                <img
                  src="../images/carbon21-logo.webp"
                  class="img-fluid carbon-logo"
                  alt="Carbon21 logo"
                />
              </div>
            </div>
          </form>
        </div>
      </div>
    </section>

    <script src="/scripts/argon2-bundled.min.js"></script>
    <script src="/scripts/validateForms.js"></script>
